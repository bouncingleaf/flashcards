<div class="container">
  <div class="row">
    <h5>Add a new deck</h5>
  </div>
  <div class="row">
    <form method="POST" action="/addDeck">
      <label for="name">Deck Name:</label>
      <input type="text" name="name" size="30" required>
      <br><br>
      <input type="submit" value="Save" class="btn btn-primary">
      <input type="button" value="Cancel" class="btn btn-secondary" onclick="cancelAdd()">
    </form>
  </div>
  <br>
  <div class="row">
    <h5>Existing Decks</h5>
  </div>
    <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Deck Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>{{this.name}}</td>
          <td><a href="/cards/{{this.id}}">Manage Deck</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <br>
  <div class="row">
    <p>
      <a href="/users">Manage Users</a>
    </p>
  </div>
</div>